{% extends 'base.html.twig' %}

{% block title %}Habitat{% endblock %}

{% block body %}
 {% include 'navbar.html.twig' %} 
    <div class="container mt-4">
        <h1 class="text-center mb-4 ">Nos habitats</h1>

        <div class="card border-success">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">Liste des habitats</h4>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th class="text-info">Nom</th>
                            <th class="text-info">Description</th>
                            <th class="text-info">Animaux</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for habitat in habitats %}
                        <tr>
                            <td class="text-success">{{ habitat.nom }}</td>
                            <td class="text-secondary">{{ habitat.description }}</td>
                            <td class="text-dark">
                                {% for animal in habitat.animals %}
                                   <a href="{{ path('app_animal_show', {'id': animal.id}) }}">{{ animal.name }}</a>{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </td>
        
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-danger">Aucun enregistrement trouv√©</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

