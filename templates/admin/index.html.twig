{% extends 'base.html.twig' %}

{% block title %}Espace Administrateur{% endblock %}

{% block body %}
<style>

</style>

<div class="container admin-container">
    <div class="row admin-header">
        <div class="col-md-12">
            <h1 class="display-4">Bonjour, José</h1>
            <h2>Bienvenue dans votre espace administrateur</h2>
            <h3>Que souhaitez-vous effectuer?</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card admin-card">
                <a class="btn btn-primary admin-btn text-white" href="{{ url('app_services_index') }}">
                    Modifier les services
                </a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card admin-card">
                <a class="btn btn-primary admin-btn text-white" href="{{ url('app_register') }}">
                    Création de compte
                </a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card admin-card">
                <a class="btn btn-primary admin-btn text-white" href="{{ url('app_habitat_index') }}">
                    Modifier les habitats
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card admin-card">
                <a class="btn btn-primary admin-btn text-white" href="{{ url('app_animal_index') }}">
                    Modifier les animaux
                </a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card admin-card">
                <a class="btn btn-primary admin-btn text-white" href="{{ url('app_opening_hours_index') }}">
                    Modifier les horaires
                </a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card admin-card">
                <a class="btn btn-danger admin-btn text-white" href="{{ url('app_logout') }}">
                    Déconnexion
                </a>
            </div>
        </div>
    </div>
</div>
 <div class="row table-container">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Consultations des Animaux</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Nom de l'animal</th>
                                    <th>Nombre de consultations</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for animal in animals %}
                                    <tr>
                                        <td>{{ animal.name }}</td>
                                        <td id="consultation-count-{{ animal.id }}">
                                            {% for animalCount in animalsCount %}
                                                {% if animalCount.animalId == animal.id %}
                                                    {{ animalCount.consultationCount }}
                                                {% endif %}
                                            {% endfor %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
