{% extends 'base.html.twig' %}

{% block title %}Services index{% endblock %}

{% block body %}
 {% include 'navbar.html.twig' %} 
    <div class="container mt-4">
        <h1 class="text-center mb-4 ">Nos Services</h1>

        <div class="card border-success">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">Liste des services</h4>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th class="text-info">Nom</th>
                            <th class="text-info">Description</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for service in services %}
                        <tr>
                            <td class="text-success">{{ service.nom }}</td>
                            <td class="text-secondary">{{ service.description }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2" class="text-center text-danger">Aucun service trouv√©</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
{% endblock %}
