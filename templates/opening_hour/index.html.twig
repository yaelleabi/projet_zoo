
{% extends 'base.html.twig' %}

{% block title %}Ajouter un horaire d'ouverture{% endblock %}

{% block body %}
    <h1>Ajouter un horaire d'ouverture</h1>


    {# Formulaire d'ajout d'horaire d'ouverture #}
    {{ form_start(form) }}
        {{ form_row(form.day, {'label': 'Jour de la semaine'}) }}
        {{ form_row(form.openHour, {'label': 'Heure d\'ouverture'}) }}
        {{ form_row(form.closeHour, {'label': 'Heure de fermeture'}) }}
        
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}

    
{% endblock %}
